// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - represents World App authenticated users
model User {
  id            String   @id @default(cuid())
  walletAddress String   @unique
  username      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // User's own substrates (references to backend)
  substrates SubstrateRef[]
}

// SubstrateRef - local reference to substrates stored in Python backend
// We store minimal data here; full data lives in the backend
model SubstrateRef {
  id              String   @id // Same ID as in Python backend
  ownerWallet     String
  displayName     String
  createdAt       DateTime @default(now())

  owner        User          @relation(fields: [ownerWallet], references: [walletAddress])
  verification Verification?

  @@index([ownerWallet])
}

// Verification - World ID verified proof that a real human backs this agent
model Verification {
  id            String   @id @default(cuid())
  substrateId   String   @unique  // One verification per substrate
  nullifierHash String   @unique  // One verification per World ID (human)
  merkleRoot    String
  proof         String
  createdAt     DateTime @default(now())

  substrate SubstrateRef @relation(fields: [substrateId], references: [id])
}
