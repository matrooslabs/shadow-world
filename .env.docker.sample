# Docker Compose Environment Variables
# Copy this file to .env and fill in the values before running docker compose up

# PostgreSQL
POSTGRES_PASSWORD=substrate_dev

# Next.js / Auth
AUTH_SECRET=           # Generate with: npx auth secret
AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_ID=    # From developer.worldcoin.org

# Backend API Keys
ANTHROPIC_API_KEY=
ELEVENLABS_API_KEY=

# Twitter OAuth 2.0 (from developer.twitter.com)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:3000/oauth/callback

# Token encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
TOKEN_ENCRYPTION_KEY=

# App settings
APP_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000"]

# Frontend -> Backend URL (client-side, baked into JS at build time)
NEXT_PUBLIC_SUBSTRATE_API_URL=http://localhost:8000
